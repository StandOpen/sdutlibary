<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:layout_marginLeft="10px"
  android:background="@android:color/transparent"
  >
   <ImageView
       android:layout_alignParentRight="true"
       android:layout_marginTop="10dip"
      android:layout_width="42px"
      android:layout_height="42px"
      android:layout_gravity="top"
      android:id="@+id/messagegedetail_rov_icon"
      android:background="@drawable/logo"
  />
  <LinearLayout
      android:layout_toLeftOf="@id/messagegedetail_rov_icon"
      android:id="@+id/chat_layout"
      android:orientation="vertical"
      android:layout_marginLeft="20dip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:clickable="true"
      android:background="@drawable/chatto"
  >    
    <LinearLayout
          android:orientation="horizontal"
	      android:layout_width="fill_parent"
	      android:layout_height="22dip"
      >
          <TextView
              android:id="@+id/messagedetail_row_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#00ffdd"
              android:paddingTop="2px"
              android:textSize="13dip"
          />
         
          </LinearLayout>
      <TextView
          android:id="@+id/messagedetail_row_text"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="2px"
          android:textColor="@android:color/black"
          android:typeface="sans"
          android:textSize="18dip"
      />
  </LinearLayout>
 
</RelativeLayout>
